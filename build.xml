<?xml version="1.0" encoding="UTF-8"?>
<project name="ss-project-41" default="all">
  
  
  <property file="build.properties"/>

  <property name="output.dir" value="${basedir}/out/production/SS-Project-41"/>
  <property name="testoutput.dir" value="${basedir}/out/test/SS-Project-41"/>
  <property name="lib.dir" value="${basedir}/lib" />

  <target name="clean">
    <delete dir="${output.dir}"/>
    <delete dir="${testoutput.dir}"/>
  </target>

  <target name="init">
    <mkdir dir="${output.dir}" />
    <mkdir dir="${testoutput.dir}" />
  </target>

  <target name="build" depends="init" description="Build">
    <javac destdir="${output.dir}" srcdir="src/" includeantruntime="false">
      <include name="**/*.java" />
      <exclude name="**/test/**" />
    </javac>
  </target>

  <target name="test" depends="init">
    <junit printsummary="yes" haltonfailure="no">

      <classpath>
        <pathelement location="${lib.dir}/junit.jar" />
      </classpath>

      <batchtest fork="yes" todir="${testoutput.dir}">
        <fileset dir="src/test">
          <include name="**/*Test*.java" />
        </fileset>
      </batchtest>

    </junit>
  </target>

  <target name="all" depends="build, test">

  </target>
