<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.tiesdavid.ssproject.online.clientside.ui.guiviews.StartupController">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <GridPane prefHeight="320.0" prefWidth="480.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="60.0" minHeight="40.0" prefHeight="60.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="120.0" minHeight="80.0" prefHeight="100.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="120.0" minHeight="80.0" prefHeight="100.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="60.0" minHeight="40.0" prefHeight="60.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="80.0" prefHeight="100.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Username" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
            </Label>
             <TextField fx:id="usernameInput" maxWidth="160.0" prefWidth="160.0" promptText="Username" GridPane.halignment="CENTER" GridPane.rowIndex="1" />

             <TextField fx:id="serverIPInput" maxWidth="160.0" prefWidth="160.0" promptText="Server IP Address" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
             <Label text="Server IP Address" GridPane.columnIndex="1" GridPane.halignment="CENTER">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
            </Label>
             <TextField fx:id="serverPortInput" maxWidth="160.0" prefWidth="160.0" promptText="Server Port" GridPane.halignment="CENTER" GridPane.rowIndex="4" />
             <Label text="Server Port" GridPane.halignment="CENTER" GridPane.rowIndex="3">
                <font>
                   <Font name="System Bold Italic" size="18.0" />
               </font>
             </Label>
             <Button maxHeight="60.0" minHeight="40.0" onAction="#onJoinButtonClick" prefHeight="40.0" prefWidth="120.0" text="Join!" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="CENTER">
                 <font>
                     <Font size="25.0" />
                 </font></Button>
         </children>
      </GridPane>
   </children>
</GridPane>
